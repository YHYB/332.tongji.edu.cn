<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.scholarship.mapper.UserMapper">

    <select id="getUserInfo" parameterType="String" resultType="team.scholarship.bean.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="searchAll" resultType="team.scholarship.bean.User">
        SELECT * FROM user
    </select>

    <select id="searchByID" resultType="team.scholarship.bean.User">
        SELECT * FROM user WHERE id = #{userID}
    </select>

    <insert id="register">
        INSERT INTO user
        VALUES (#{userID}, #{name}, #{password}, null)
    </insert>

    <update id="update">
        UPDATE user
        SET score = #{score}
        WHERE id = #{userID}
    </update>

    <update id="changePwd">
        UPDATE user
        SET id = #{userID}, password = #{password}
        WHERE id = #{userID}
    </update>

</mapper>